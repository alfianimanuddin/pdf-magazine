// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  magazines Magazine[]
}

model Magazine {
  id          String   @id @default(cuid())
  title       String
  description String?
  coverImage  String?
  pdfPath     String
  slug        String   @unique
  totalPages  Int
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  pages MagazinePage[]
  views MagazineView[]

  @@index([userId])
  @@index([slug])
  @@index([published])
}

model MagazinePage {
  id         String @id @default(cuid())
  magazineId String
  pageNumber Int
  imagePath  String

  magazine Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@unique([magazineId, pageNumber])
  @@index([magazineId])
}

model MagazineView {
  id         String   @id @default(cuid())
  magazineId String
  viewedAt   DateTime @default(now())
  ipAddress  String?
  userAgent  String?

  magazine Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@index([magazineId])
  @@index([viewedAt])
}

enum Role {
  ADMIN
  USER
}
