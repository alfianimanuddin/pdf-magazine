generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Magazine {
  id           String         @id @default(cuid())
  title        String
  description  String?
  coverImage   String?
  pdfPath      String
  slug         String         @unique
  totalPages   Int
  published    Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  userId       String
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages MagazinePage[]
  views MagazineView[]

  @@index([published])
  @@index([slug])
  @@index([userId])
}

model MagazinePage {
  id         String   @id @default(cuid())
  magazineId String
  pageNumber Int
  imagePath  String
  Magazine   Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@unique([magazineId, pageNumber])
  @@index([magazineId])
}

model MagazineView {
  id         String   @id @default(cuid())
  magazineId String
  viewedAt   DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  Magazine   Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@index([magazineId])
  @@index([viewedAt])
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  role      Role       @default(ADMIN)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Magazine  Magazine[]
}

enum Role {
  ADMIN
  USER
}
