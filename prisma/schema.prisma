generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Magazine {
  id           String         @id
  title        String
  description  String?
  coverImage   String?
  pdfPath      String
  slug         String         @unique
  totalPages   Int
  published    Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  userId       String
  User         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  MagazinePage MagazinePage[]
  MagazineView MagazineView[]

  @@index([published])
  @@index([slug])
  @@index([userId])
}

model MagazinePage {
  id         String   @id
  magazineId String
  pageNumber Int
  imagePath  String
  Magazine   Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@unique([magazineId, pageNumber])
  @@index([magazineId])
}

model MagazineView {
  id         String   @id
  magazineId String
  viewedAt   DateTime @default(now())
  ipAddress  String?
  userAgent  String?
  Magazine   Magazine @relation(fields: [magazineId], references: [id], onDelete: Cascade)

  @@index([magazineId])
  @@index([viewedAt])
}

model User {
  id        String     @id
  email     String     @unique
  password  String
  name      String?
  role      Role       @default(ADMIN)
  createdAt DateTime   @default(now())
  updatedAt DateTime
  Magazine  Magazine[]
}

enum Role {
  ADMIN
  USER
}
